<body>

  <div class="container">
    <div class="row">
      <div class="col-lg header">
        <h2>Урок 6, mongo и passport</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        <div id="menu-place">
          <div>
            <h4>Меню</h4>
            <ul class="list-group">
              <li class="list-group-item list-group-item-action"><a href="/">Все задачи</a></li>
            </ul></br>
            
          </div>
        </div>
      </div>
      <div class="col-1">
      </div>
      <div class="col-md">
        <div id="login-place">
          <div>
            <form class="w-100 mx-auto text-center" method="post" action="/user/auth">
              <label for="emailfield">Логин:</label>
              <input type="text" class="form-control username" id="loginfield" name="username"
                placeholder="Ваш логин">
              <label for="passwordfield">Пароль:</label>
              <input type="password" class="form-control password" id="passwordfield" name="password" placeholder="Ваш пароль"></br>
              <input class="btn btn-success" type="submit" value="Авторизоваться"/>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

